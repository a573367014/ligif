
{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "./es",
    "target": "es6",
    "sourceMap": false,
    "lib": ["dom", "esnext"],
    "noUnusedLocals": true,
    "declaration": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/core/**/*",
    "src/interface/**/*",
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}